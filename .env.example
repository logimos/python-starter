# .env.example - Copy to .env and fill in values
# DO NOT COMMIT .env FILE

# Application Settings
DEBUG=True
ENVIRONMENT=development

# Postgres Settings
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_SERVER=postgres # Service name in docker-compose
POSTGRES_PORT=5432
POSTGRES_DB=appdb

# Redis Settings
REDIS_HOST=redis # Service name in docker-compose
REDIS_PORT=6379
REDIS_DB=0

# Optional: Override assembled URLs if needed
# DATABASE_URL=postgresql+psycopg://user:password@postgres:5432/appdb
# REDIS_URL=redis://redis:6379/0
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0